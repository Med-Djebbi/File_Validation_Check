@model IEnumerable<FileValidationCheck.Models.FichierModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.fichierID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.format_nomination)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.separateur)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.userID)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.fichierID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.format_nomination)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.separateur)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.userID)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.fichierID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.fichierID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.fichierID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
